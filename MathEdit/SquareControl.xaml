<UserControl x:Class="MathEdit.SquareControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MathEdit"
             mc:Ignorable="d" 
             Name="parent"
             Height="51.5"
             Width="80"
             >
    <StackPanel x:Name="sqaureCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Top" Orientation="Horizontal" Width="auto" >
        <Image x:Name="sqrrootbase" Source="images/sqrrootbase.png" VerticalAlignment="Bottom" HorizontalAlignment="Left"     />
        <Canvas Name="canvasStrech" Background="White" Width="52"  >
            <StackPanel Background="Black" Width="{Binding ElementName=canvasStrech, Path=ActualWidth}" Height="0.7" Canvas.Top="1"></StackPanel>
            <RichTextBox x:Name="richTextBox" Height="30"  Width="34" Canvas.Left="9" Canvas.Top="15" >
                <FlowDocument>
                    <Paragraph>
                        <Run Text=""/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Canvas>
    </StackPanel>
</UserControl>
