<UserControl x:Class="MathEdit.Views.HotkeyMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MathEdit"
             mc:Ignorable="d" 
             MinHeight="50" 
             DataContext="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext}"
             MinWidth="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Button x:Name="fraction" Grid.Column="0" Grid.Row="0" >
            <TextBlock FontSize="10">
               ALT+W
            </TextBlock>
        </Button>
        <Button x:Name="sqrt" Grid.Column="1" Grid.Row="0">
            <TextBlock FontSize="10">
               ALT+S
            </TextBlock>
        </Button>
        <Button x:Name="power" Grid.Column="2" Grid.Row="0">
            <TextBlock FontSize="10">
               ALT+D 
            </TextBlock>
        </Button>
    </Grid>
</UserControl>
