<Application x:Class="MathEdit.Views.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:MathEdit.Views"
             StartupUri="MainWindow.xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d1p1:Ignorable="d"
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Model="clr-namespace:MathEdit.Model;assembly=MathEdit.Model">
    <Application.Resources>
        <DataTemplate DataType="{x:Type Model:FractionModel}">
            <Canvas>
                <Views:FractionControl/>
            </Canvas>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Model:PowModel}">
            <Canvas>
                <Views:PowControl/>
            </Canvas>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Model:SquareModel}">
            <Canvas>
                <Views:SquareControl/>
            </Canvas>
        </DataTemplate>
    </Application.Resources>
</Application>